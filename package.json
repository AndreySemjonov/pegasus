{
  "name": "pegasus",
  "version": "0.1.0",
  "author": "Tim Sweet",
  "homepage": "https://www.heliorc.com",
  "description": "No more Mr. Nice Gaius!",
  "main": "public/electron.js",
  "repository": "https://github.com/heliorc/pegasus",
  "buildDependenciesFromSource": true,
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "build": {
    "extraResources": "public/server/utils/dfu/**/*",
    "appId": "com.pegasus",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@connectedyard/node-intelhex": "^1.2.4",
    "@material-ui/core": "^3.1.1",
    "@material-ui/icons": "^3.0.1",
    "@material-ui/lab": "^3.0.0-alpha.17",
    "electron-context-menu": "^0.10.0",
    "electron-updater": "^3.1.2",
    "express": "^4.16.3",
    "express-fileupload": "^1.0.0-alpha.1",
    "material-ui": "^0.20.2",
    "material-ui-slider": "^0.1.0",
    "node-hid": "^0.7.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-grid-layout": "^0.16.6",
    "react-intl": "^2.7.0",
    "react-markdown": "^3.6.0",
    "react-scripts": "1.1.5",
    "serialport": "^7.0.2",
    "usb": "github:tessel/node-usb#2961e948d93bec0cdd1908c03e3f1f98dfd3fd44",
    "websocket": "^1.0.28"
  },
  "lint-staged": {
    "{{public,src}/**/*.{scss,js,json},package.json}": [
      "prettier --write \"{{public,src}/**/*.{scss,js,json},package.json}\"",
      "git add"
    ]
  },
  "scripts": {
    "install": "electron-rebuild -w serialport,usb,node-hid,node-sass -f",
    "preship": "yarn build && yarn build-css",
    "ship": "build --win --ia32 -p always -c electron-builder.yml",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "pretty": "prettier --write \"{{public,src}/**/*.{css,scss,js,json},package.json}\"",
    "precommit": "lint-staged",
    "electron-dev": "concurrently \"yarn watch-css\" \"export BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-win": "concurrently \"yarn watch-css\" \"set BROWSER=none&&yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --mac -c electron-builder.yml",
    "electron-pack-win": "yarn build && build --win -c electron-builder.yml",
    "electron-pack-lin": "yarn build && build -l -c electron-builder.yml",
    "preelectron-pack": "yarn build && yarn build-css"
  },
  "devDependencies": {
    "node-sass-chokidar": "0.0.3",
    "concurrently": "^3.5.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.2",
    "electron-rebuild": "^1.8.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "wait-on": "^3.0.1"
  },
  "darwinDependencies": {
    "usb": "github:tessel/node-usb#2961e948d93bec0cdd1908c03e3f1f98dfd3fd44",
    "node-hid": "^0.7.3"
  },
  "win32Dependencies": {
    "usb": "github:tessel/node-usb#2961e948d93bec0cdd1908c03e3f1f98dfd3fd44",
    "node-hid": "^0.7.3"
  }
}
